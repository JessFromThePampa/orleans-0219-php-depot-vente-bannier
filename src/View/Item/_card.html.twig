<!--Card -->

<h2 class="produits ">Nos articles tendances</h2>

<section class="container">

    <div class="card-group row">

        {#{% for product in products %}#}

        {% for i in range (1,3) %}
            <div class="card col-md-12 mx-auto">

                <div class="card-body text-center">
                    <div class="card-img">

                        <img class=" img-thumbnail" src="{{ product['image'] }}" alt="">

                    </div>

                    <h5 class="card-title">{{ product['name'] }} </h5>
                    <p class="text">{{ product['price'] }}</p>

                    <p class="card-text">{{ product['description'] }}</p>


                    <a href="/products/show/{{ product.id }}" class="btn btn-info">+ d'infos</a>
                </div>
            </div>
        {% endfor %}
        {#{% endfor %}#}
    </div>
    <div class="row d-flex justify-content-center">
        <button class="btn btn-product px-5" type="button">Tous nos produits</button>
    </div>
</section>

