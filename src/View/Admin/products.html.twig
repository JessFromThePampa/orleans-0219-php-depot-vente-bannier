{% extends 'adminLayout.html.twig' %}

{% block title %}Mes produits{% endblock %}
{% block content %}
    <h1 class="text-center my-5">Gestion des produits</h1>
    <section class="row justify-content-center">
        <table class="table col-lg-10 text-center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Ref</th>
                <th scope="col">Catégories</th>
                <th scope="col">Nom des produits</th>
                <th scope="col">Prix</th>
                <th scope="col">Mis en vente</th>
                <th scope="col">Editer</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.categories }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }} €</td>
                    <td>{{ product.date_added|date("d/m/y") }}</td>
                    <td><a href="/adminProduct/update/{{ product.id }}"><img src="/assets/images/edit-filled.png"></a></td>
                    <form method="post" action="/AdminProduct/delete/">
                        <td>
                            <input class="deleteBTN" type="submit" value="{{ product.id }}" name="id"
                                   onclick="if(window.confirm('Voulez-vous vraiment supprimer ?'))
                                   {return true;}else{return false;}">
                        </td>
                    </form>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
