{% extends 'visitorLayout.html.twig' %}
{% block title %}Nos produits{% endblock %}
{% block content %}

    <h2 class="produits">{{ products[0].categories ? products[0].categories : 'Tous nos produits' }}</h2>

    <section class="container">
            <select  onchange="location = this.value;" class="form-control text-align-center">
                <option selected>Cat√©gories</option>
                {% for category in categories %}
                    <option value="/products/categories/{{ category.id }}">
                        {{ category.name }}</option>
                {% endfor %}
            </select>
        <div class="row">
            {% for product in products %}
                {% include 'Item/_card.html.twig' %}
            {% endfor %}
        </div>

    </section>

{% endblock %}
