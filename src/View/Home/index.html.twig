{% extends 'visitorLayout.html.twig' %}

{% block content %}

    <section class="d-none d-sm-block">
        <div class="jumbotron">
            <div class="text-white text-center py-5 px-4 my-5 row">
                <div class="text-jumbotron col-md-6">
                    <h2 class="card-title pt-3">
                        <strong>Dépôt-Vente Bannier</strong></h2>
                    <p>Antiquities Passion
                    </p>
                </div>
            </div>
        </div>
    </section>
    <h2 class="produits">Nos articles tendances</h2>
    <section class="container">
        <div class="row">
            {% for product in products if product.ahead == 1 %}
