{% extends 'visitorLayout.html.twig' %}
{% block title %}Dépôt Bannier{% endblock %}
{% block content %}
    <section class="d-none d-sm-block">
        <div class="jumbotron">
            <div class="text-white text-center py-5 px-4 my-5 row">
                <div class="text-jumbotron col-md-7">
                    <h1 class="card-title pt-3">
                        <strong>Dépôt-Vente Bannier</strong></h1>
                    <p>Antiquities Passion
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section>
        <h2 class="titleheadband">Nos articles tendances</h2>
        <div class="container pb-4">
            <div class="row">
                {% for product in products if product.ahead == 1 %}
                    {% include 'Item/_card.html.twig' %}
                {% endfor %}
                <div class="form-group row mx-auto mt-5">
                    <a href="/product/list/?category=Tous+nos+produits" class="btn btn-dark justify-content-center">
                        Tous nos produits</a>
                </div>
            </div>
        </div>
    </section>

    {% include "Item/_ourStore.html.twig" %}
    {% include "Item/_operationDeposit.html.twig" %}
    {% include 'Item/_formContact.html.twig' %}

{% endblock %}