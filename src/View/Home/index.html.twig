            {% endfor %}
        </div>
        <div class="form-group row d-flex justify-content-center mt-5 mb-0 ">
            <button href="product/list" class="btn btn-outline-secondary btn-lg allbuton">Tous nos produits</button>
        </div>
    </section>
    {% include "Item/_ourStore.html.twig" %}
    {% include "Item/_operationDeposit.html.twig" %}
